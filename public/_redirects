# API and data files should not be redirected
/messages.json    /messages.json    200
/@data/*    /@data/:splat    200
/data/*    /data/:splat    200
/assets/*    /assets/:splat    200
/sitemap.xml    /sitemap.xml    200
/robots.txt    /robots.txt    200
/manifest.json    /manifest.json    200

# Message routes - handle both HTML files and directory-based routes
/message/*.html    /message/:splat    200
/message/*/    /message/:splat/index.html    200
/message/*    /message/:splat/index.html    200

# Redirect all routes to index.html for SPA
/* /index.html 200

# Redirect www to non-www
https://www.message.cengizyilmaz.net/* https://message.cengizyilmaz.net/:splat 301!

# Redirect HTTP to HTTPS
http://message.cengizyilmaz.net/* https://message.cengizyilmaz.net/:splat 301!

# Handle 404s
/404 /404.html 404
/* /404.html 404 